{
  "name": "hoichoi",
  "productName": "hoichoi",
  "version": "1.0.0",
  "description": "Hoichoi TV Search, Stream & Download",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "keywords": [
    "Hoichoi TV",
    "Hoichoi Free",
    "Hoichoi Stream Free",
    "Hoichoi Download",
    "Hoichoi Free Download"
  ],
  "author": "tzsk",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip",
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "icon": "src/favicon.ico",
        "packageManager": "yarn"
      },
      "electronWinstallerConfig": {
        "name": "hoichoi",
        "skipUpdateIcon": true,
        "loadingGif": "src/loading.gif",
        "setupIcon": "src/favicon.ico",
        "iconUrl": "https://raw.githubusercontent.com/tzsk/hoichoi/forge/src/favicon.ico"
      },
      "electronInstallerDebian": {
        "icon": "src/favicon.ico"
      },
      "electronInstallerRedhat": {
        "icon": "src/favicon.ico"
      },
      "electronInstallerDMG": {
        "icon": "src/favicon.ico"
      },
      "github_repository": {
        "owner": "tzsk",
        "name": "hoichoi"
      }
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "custom-electron-titlebar": "^3.0.0",
    "electron-compile": "^6.4.4",
    "electron-devtools-installer": "^2.1.0",
    "electron-dl": "^1.13.0",
    "electron-squirrel-startup": "^1.0.0",
    "vue": "^2.1.7",
    "vue-loading-overlay": "^3.1.1",
    "vue-router": "^3.0.2",
    "vue-video-player": "^5.0.2",
    "vuex": "^3.1.0",
    "vueify": "^9.4.1"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^2.1.0",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0"
  }
}
